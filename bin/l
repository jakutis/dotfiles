#!/usr/bin/env bash

LISTS="$HOME/repos/git/wiki/lists"

if [ -z "$1" ]
then
    ls "$LISTS"
    exit
fi

if [ -z "$2" ]
then
    cat "$LISTS/$1"
else
    if [ -n "$(cat "$LISTS/$1"|grep -i "$2")" ]
    then
        echo "Warning: given reference already exists in given list" 1>&2
        exit
    fi
    echo "$2" >> "$LISTS/$1"
fi
