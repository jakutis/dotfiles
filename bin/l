#!/usr/bin/env bash

if [ -z "$1" ]
then
    ls "$HOME/etc/wiki/lists"
    exit
fi

if [ -z "$2" ]
then
    cat "$HOME/etc/wiki/lists/$1"
else
    if [ -n "$(cat "$HOME/etc/wiki/lists/$1"|grep -i "$2")" ]
    then
        echo "Warning: given reference already exists in given list" 1>&2
        exit
    fi
    echo "$2" >> "$HOME/etc/wiki/lists/$1"
fi
