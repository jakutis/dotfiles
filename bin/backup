#!/usr/bin/env bash

set -e

cd ~/etc/root/References/my
for FILE in "Journal" "Journal - archive" "Journal - calendar"
do
  rm -f "$FILE.zip"
  root rm "$FILE.zip" || true
  remarkable receivezip "$FILE"
  root send "$FILE.zip"
  if [ "$?" != "0" ]
  then
    echo "Error: failed to upload a backup"
    exit 1
  fi
done
