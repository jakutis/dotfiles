#!/usr/bin/env bash

set -e

cd "$HOME/.local/share/akregator"
git U

cd "$HOME/etc/root/References/my/journal"
for FILE in $(remarkable list /Journal|tail +2|cut -c 5-)
do
  rm -f "$FILE.zip"
  remarkable receivezip "/Journal/$FILE"
  root replace "$FILE.zip"

  rm -f "$FILE.pdf"
  mv "$HOME/etc/google-drive/$FILE.pdf" .
  root replace "$FILE.pdf"
done
