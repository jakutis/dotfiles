#!/usr/bin/env bash

set -e

cd "$HOME/etc/email"
git U

cd "$HOME/.local/share/akregator"
git U

cd "$HOME/etc/root/References/my/journal"
for FILE in "References" "Projects" "Tasks" "Calendar" "References-archive" "Projects-archive" "Tasks-archive" "Calendar-archive"
do
  rm -f "$FILE.zip"
  remarkable receivezip "/Journal/$FILE" || continue
  root rm "$FILE.zip" || true
  root send "$FILE.zip"

  rm -f "$FILE.pdf"
  cp "$HOME/etc/google-drive/$FILE.pdf" .
  root rm "$FILE.pdf" || true
  root send "$FILE.pdf"
done
