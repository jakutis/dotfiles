#!/usr/bin/env bash

DURATION_UNTIL_SCREENSAVER=$(cat "$XDG_CONFIG_HOME/dotfiles/duration-until-screensaver")
xset s default
xset s "$DURATION_UNTIL_SCREENSAVER"

DURATION_UNTIL_BLANK_SCREEN=$((DURATION_UNTIL_SCREENSAVER - 60))
xset +dpms
xset dpms "$DURATION_UNTIL_BLANK_SCREEN" "$DURATION_UNTIL_BLANK_SCREEN" "$DURATION_UNTIL_BLANK_SCREEN"
