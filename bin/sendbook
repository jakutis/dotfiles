#!/usr/bin/env bash

set -e

DIR="$HOME/etc/root/References/types/books/text"

if [ "$(pwd)" != "$DIR" ]
then
  echo "must be inside $DIR" 1>&2
  exit 1
fi

while [ -n "$1" ]
do
  root send "$1"
  remarkable send "$1" /Reading
  mkdir -p "$HOME/Dropbox/reads/books" && cp "$1" "$HOME/Dropbox/reads/books"
  shift
done
