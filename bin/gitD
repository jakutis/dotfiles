#!/usr/bin/env bash

echo "======= Now syncing Desktop"

cd "$HOME/Desktop"
for A in $(ls -t)
do
  cd "$HOME/Desktop/$A"
  git-pull-if-clean || exit 1
done

cd "$HOME/etc/storage"
git annex sync || exit 1

echo "======= Now syncing custom directories"

for A in .varia/albums .varia/gajim .Skype Maildir .osmo .gnupg .winetrickscache .varia/minecraft .varia/albums .varia/dokuwiki .varia/ejabberd .varia/log .varia/maildir .varia/wiki.lanparty.lt etc/gitolite-admin .varia/ssl .varia/gramps .varia/zotero-dav .varia/wordpress .varia/linklog etc/latex .varia/thinkup .varia/zotero-main .varia/zotero-dataserver etc/r etc/blog etc/base etc/wiki .varia/piwigo .varia/qw
do
  if [ -e "$HOME/$A" ]
  then
    cd $HOME/$A
    git-pull-if-clean || exit 1
  else
    echo "----------------- $A is not cloned"
  fi
done
