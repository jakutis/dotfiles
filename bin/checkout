#!/usr/bin/env bash

REPO="$1"

if [ ! -d "$HOME/repos/git/$REPO" ]
then
  URL="$REPO"
  REPO="${REPO##*/}"
  REPO="${REPO%.git}"
  if [ ! -d "$HOME/repos/git/$REPO" ]
  then
    (cd "$HOME/repos/git" && git clone "$URL")
  fi
fi

if [ -e "$REPO" ]
then
  echo "Cannot checkout, folder $REPO already exists"
  exit 1
fi

DEFAULT_BRANCH="$(cd "$HOME/repos/git/$REPO" && git rev-parse --abbrev-ref origin/HEAD|cut -c 8-)"
if [ -n "$2" ]
then
  BRANCH="$2"
else
  BRANCH="$DEFAULT_BRANCH"
fi

(cd "$HOME/repos/git/$REPO" && [ "$(git branch --show-current)" = "$DEFAULT_BRANCH" ] && git fetch --all --prune --prune-tags && git rebase origin/$DEFAULT_BRANCH) && cp -r "$HOME/repos/git/$REPO" . && cd "$REPO" && git clean -ffxd . || exit 1

if [ -n "$(git branch --all|grep "^  remotes/origin/$BRANCH$")" ]
then
  git checkout "$BRANCH" || exit 1
else
  git checkout -b "$BRANCH" "$DEFAULT_BRANCH" || exit 1
fi

ide
