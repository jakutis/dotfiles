#!/usr/bin/env bash

REPO="$1"
BRANCH="$2"

if [ ! -d "$HOME/repos/git/$REPO" ]
then
  if [ "${REPO%.git}" = "$REPO" ]
  then
    echo "Error: expected $REPO to be a git source specifier that ends with .git" 1>&2
    exit 1
  fi
  URL="$REPO"
  REPO="${REPO##*/}"
  REPO="${REPO%.git}"
  if [ ! -d "$HOME/repos/git/$REPO" ]
  then
    (cd "$HOME/repos/git" && git clone "$URL")
  fi
fi

if [ -e "$REPO" ]
then
  echo "Cannot checkout, folder $REPO already exists" 1>&2
  exit 1
fi

DEFAULT_BRANCH="$(cd "$HOME/repos/git/$REPO" && git symbolic-ref --short HEAD)"
if [ -z "$BRANCH" ]
then
  BRANCH="$DEFAULT_BRANCH"
fi

echo $DEFAULT_BRANCH

(cd "$HOME/repos/git/$REPO" && [ "$(git branch --show-current)" = "$DEFAULT_BRANCH" ] && git fetch --all --prune --prune-tags && git rebase origin/$DEFAULT_BRANCH) && cp -r "$HOME/repos/git/$REPO" . && cd "$REPO" && git clean -ffxd . || (echo failed to fetch;exit 1)

if [ -n "$(git branch --all|grep "^  remotes/origin/$BRANCH$")" ]
then
  git checkout "$BRANCH" || exit 1
else
  git checkout -b "$BRANCH" "$DEFAULT_BRANCH" || exit 1
fi

ide
