#!/usr/bin/env bash

cat "$@" | while read LINE
do
  echo "$LINE" | grep '^#' >/dev/null
  if [ "$?" = "0" ]
  then
    continue
  fi
  if [[ "$LINE" =~ ^https: ]]
  then
    www "$LINE"
  else
    PAGE="$(echo "$LINE" | sed -e 's/ .*$//')"
    FILE="$(echo "$LINE" | sed -e 's/^[0-9]* //')"
    okular --page "$PAGE" "$HOME/etc/root/$FILE" &
  fi
done
