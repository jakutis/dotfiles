#!/usr/bin/env bash

cd "$HOME/bin" && git pull --rebase && cd .. && XDG_CONFIG_HOME="$HOME/.config" sudo --preserve-env=XDG_CONFIG_HOME "$HOME/bin/install-system" && lang upgrade && youtube-dl -U && "$HOME/.tmux/plugins/tpm/bin/update_plugins" all && vim +PlugUpdate +qall && flatpak update && sudo apt-get update && sudo aptitude || exit 1
