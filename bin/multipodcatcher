#!/usr/bin/env bash

DIR="$1"
LIST="$2"

cd "$DIR"
ALL_DOWNLOADED=""
while read LINE
do
  NAME=$(echo "$LINE" | cut -f1 -d' ')
  URL=$(echo "$LINE" | cut -f2 -d' ')
  echo "dowloading $NAME"

  mkdir -p "$NAME" || exit 1

  {
    FD="/proc/$BASHPID/fd/3"
    chmod u+w "$FD"
    STDOUT=$(podcatcher "$NAME" "$URL" "$FD")
    STATUS=$?
    DOWNLOADED=$(cat "$FD")
  } 3<<EOT
EOT

  echo "$STDOUT"
  if [ "$STATUS" != "0" ]
  then
    exit 1
  fi
  if [ -n "$DOWNLOADED" ]
  then
    ALL_DOWNLOADED="$ALL_DOWNLOADED
$DOWNLOADED"
  fi
done < <(cat "$LIST")

echo finished downloading, new files below
echo "$ALL_DOWNLOADED"
