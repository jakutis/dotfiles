#!/usr/bin/env bash

FLAGS="--user-data-dir="$HOME/.config/google-chrome" --enable-experimental-extension-apis --ignore-gpu-blacklist --audio-buffer-size=4096"

BROWSER="$(which chromium-browser 2>/dev/null)"
if [ -z "$BROWSER" ]
then
    BROWSER="$(which chrome 2>/dev/null)"
fi
if [ -z "$BROWSER" ]
then
    BROWSER="$(which google-chrome 2>/dev/null)"
fi
if [ -z "$BROWSER" ]
then
    BROWSER="$(which chromium 2>/dev/null)"
fi

"$BROWSER" $FLAGS "$1" 2>/dev/null 1>/dev/null
