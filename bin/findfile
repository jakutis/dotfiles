#!/usr/bin/env bash

OPENER="$2"
FOLDERS="$1"
if [ -z "$FOLDERS" ]
then
    echo "First argument must be a space separated list of paths to directories" 1>&2
    exit 1
fi

shift
shift
shift

GREPS=""
for A in "$@"
do
    GREPS="$GREPS | grep -i "$A""
done

function updateIndex {
    pushd .
    echo "Updating index "$1.7z""
    cd "$1"
    find . | 7z a -t7z -m0=lzma -mx=9 -mfb=64 -md=32m -ms=on -si "$1.7z"
    echo "Done updating"
    popd
}

for F in $FOLDERS
do
    echo "---------- $F"
    echo
    if ! [ -e "$F" ]
    then
        echo "Folder does not exist"
        exit 1
    fi
    if ! [ -e "$F.7z" ]
    then
        updateIndex "$F"
    fi
    eval "7z x -so "$F.7z" $GREPS" 2>/dev/null | (
        while read FILE
        do
            echo "$OPENER \"$F/$FILE\""
            ls -lha "$F/$FILE"
            echo
        done
    )
done
