#!/usr/bin/env bash

CMD="$1"
shift

if [ "$CMD" = "toggle" ]
then
  playerctl --all-players play-pause
  cmus-remote -C player-pause
elif [ "$CMD" = "pause" ]
then
  playerctl --all-players pause
  cmus-remote -C player-pause
elif [ "$CMD" = "resume" ]
then
  playerctl --all-players play
  cmus-remote -C player-pause
elif [ "$CMD" = "next" ]
then
  playerctl --all-players next
  cmus-remote -C player-next
elif [ "$CMD" = "previous" ]
then
  playerctl --all-players previous
  cmus-remote -C player-prev
else
  echo "Error: unknown command $CMD" >&2
  exit 1
fi
