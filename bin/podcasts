#!/usr/bin/env bash

DISK="/media/Generic_SDCard_DISK_60570152-0:1_B54C-4AF4"

while true
do
  cd "$DISK/Audio/root" 2>/dev/null
  if [ "$?" = "0" ]
  then
    break
  fi
  echo "wait..."
  sleep 1
done

echo "download!"
multipodcatcher "podcasts" "/home/jakutis/repos/git/varia/podcasts.txt" && root send && cd / && sudo umount "$DISK" || exit 1