#!/usr/bin/env bash

DIR="$1"

ls -1 "$DIR" | while read FILE
do
  echo "# $DIR/$FILE"
  echo
  echo "transcribing"
  NOTE=$(speech-to-text "$DIR/$FILE")
  if [ "$?" == "0" ]
  then
    DATE="$(date --rfc-3339=seconds -d "$(stat -c '%y' "$DIR/$FILE")")" note "$NOTE" && mv "$DIR/$FILE" "$HOME/etc/noted" || exit 1
  else
    echo "transcription failed: $DIR/$FILE"
  fi
done

echo "all noted"