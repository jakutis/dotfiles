#!/usr/bin/env bash

if [ -n "$(cat /proc/acpi/wakeup | grep LID0 | grep enabled)" ]
then
  echo LID0 > /proc/acpi/wakeup
fi

if [ -n "$(cat /proc/acpi/wakeup | grep XHC1 | grep enabled)" ]
then
  echo XHC1 > /proc/acpi/wakeup
fi

chmod a+w /home/jakutis/.config/dotfiles/brightness/brightness
chmod a+w /home/jakutis/.config/dotfiles/keyboard/brightness

bash -c "while [ ! -e /dev/tty7 ]; do sleep 0.2; done; chmod g+r /dev/tty7 && su --login --command 'startx -- vt7' jakutis" 1>/dev/null 2>&1 &
XDG_DATA_HOME=/home/jakutis/.local/share XDG_CONFIG_HOME=/home/jakutis/.config /home/jakutis/bin/system net client-wifi
