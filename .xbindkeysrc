# To find out a key sequence definition, run xbindkeys -mk

# TODO mute speakers

# Decrease audio volume
"volume pulse decrease"
  Mod4 + F2

# Decrease audio volume
"volume pulse decrease"
  XF86AudioLowerVolume

# Increase audio volume
"volume pulse increase"
  Mod4 + F3

# Increase audio volume
"volume pulse increase"
  XF86AudioRaiseVolume

# TODO mute microphone

# Decrease screen brightness
"system brightness less"
  Mod4 + F5

# Decrease screen brightness
"system brightness less"
  XF86MonBrightnessDown

# Increase screen brightness
"system brightness more"
  Mod4 + F6

# Increase screen brightness
"system brightness more"
  XF86MonBrightnessUp

# Cycle through connected screens
"system screens"
  Mod4 + F7

# Cycle through connected screens
"system screens"
  XF86Display

# Play previous audio track
"cmus-remote -C player-prev"
  Mod4 + z

# Play selected audio track
"cmus-remote -C player-play"
  Mod4 + x

# Pause audio track playback
"cmus-remote -C player-pause"
  Mod4 + c

# Stop audio track playback
"cmus-remote -C player-stop"
  Mod4 + v

# Play next audio track
"cmus-remote -C player-next"
  Mod4 + b

# Lock screen
"displayoff;xscreensaver-command -lock"
  Mod4 + Home

# Suspend
"system suspend"
  Mod4 + XF86PowerOff

# Suspend
"system suspend"
  Mod4 + End

# Decrease keyboard brightness
"system keyboard less"
  XF86KbdBrightnessDown

# Increase keyboard brightness
"system keyboard more"
  XF86KbdBrightnessUp

# Use only the first screen
"system screens only FIRST"
  Mod4 + F11

# Screenshot
"shot"
  Mod4 + F12

# Screenshot with 2 second delay
"shot 2"
  Shift+Mod4 + F12

