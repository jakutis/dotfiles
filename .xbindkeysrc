# To find out a key sequence definition, run xbindkeys -mk

# Toggle audio mute
"volume pulse mute"
  Mod4 + F1

# Toggle audio mute
"volume pulse mute"
  XF86AudioMute

# Decrease audio volume
"volume pulse decrease"
  Mod4 + F2

# Decrease audio volume
"volume pulse decrease"
  XF86AudioLowerVolume

# Increase audio volume
"volume pulse increase"
  Mod4 + F3

# Increase audio volume
"volume pulse increase"
  XF86AudioRaiseVolume

# TODO mute microphone

# Decrease screen brightness
"system brightness less"
  Mod4 + F5

# Decrease screen brightness
"system brightness less"
  XF86MonBrightnessDown

# Increase screen brightness
"system brightness more"
  Mod4 + F6

# Increase screen brightness
"system brightness more"
  XF86MonBrightnessUp

# Cycle through connected screens
"system screens"
  Mod4 + F7

# Cycle through connected screens
"system screens"
  XF86Display

# Play previous audio track
"cmus-remote -C player-prev"
  Mod4 + F8

# Play previous audio track
"cmus-remote -C player-prev"
  Mod4 + z

# Play previous audio track
"cmus-remote -C player-prev"
  XF86AudioPrev

# Pause/play audio track
"cmus-remote -C player-pause"
  Mod4 + F9

# Pause/play audio track
"cmus-remote -C player-pause"
  Mod4 + c

# Pause/play audio track
"cmus-remote -C player-pause"
  XF86AudioPause

# Pause/play audio track
"cmus-remote -C player-pause"
  XF86AudioPlay

# Play next audio track
"cmus-remote -C player-next"
  Mod4 + F10

# Play next audio track
"cmus-remote -C player-next"
  Mod4 + b

# Play next audio track
"cmus-remote -C player-next"
  XF86AudioNext

# Use only the first screen
"system screens only FIRST"
  Mod4 + F11

# Screenshot
"shot"
  Mod4 + F12

# Screenshot with 2 second delay
"shot 2"
  Shift+Mod4 + F12

# Lock screen
"xscreensaver-command -lock"
  Mod4 + Home

# Suspend
"system suspend"
  Mod4 + XF86PowerOff

# Suspend
"system suspend"
  Mod4 + End

# Decrease keyboard brightness
"system keyboard less"
  XF86KbdBrightnessDown

# Increase keyboard brightness
"system keyboard more"
  XF86KbdBrightnessUp

# Open terminal in git repositories folder
"bash -c 'cd $HOME/repos/git;xterm'"
  Mod4 + g
